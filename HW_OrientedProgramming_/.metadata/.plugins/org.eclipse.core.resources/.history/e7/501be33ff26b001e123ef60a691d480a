package hw2;

import java.util.Scanner;

public class Triangle {
	
	
	public Triangle() {
	}
	
	public static double getArea(double dWidth, double dHeight) {
		double dArea;
		dArea = (dWidth * dHeight)/2;
		return dArea;
	}
	
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		double tri1_width, tri1_height, tri1_area;
		double tri2_width, tri2_height, tri2_area;
		
		System.out.println("첫 번째 삼각형의 밑변을 입력하세요: ");
		tri1_width=scanner.nextDouble();

		System.out.println("첫 번째 삼각형의 높이를 입력하세요: ");
		tri1_height=scanner.nextDouble();

		System.out.println("두 번째 삼각형의 밑변을 입력하세요: ");
		double tri2_width=scanner.nextDouble();

		System.out.println("두 번째 삼각형의 높이를 입력하세요: ");
		double tri2_height=scanner.nextDouble();
		

	}

}
