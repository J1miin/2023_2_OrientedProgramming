package studentInfo;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		int iTotalNum;
		int iStudentCnt;
		
		Scanner scanner = new Scanner(System.in);
		System.out.print("총 학생 수를 입력하세요: ");
		iTotalNum=scanner.nextInt();
		
		
		for (int i=0;i<iTotalNum;++i) {
			iStudentCnt=i+1;
			Student student1 = new Student();
			
			System.out.print("학생 "+iStudentCnt+"의 이름을 입력하시오. : ");
			student1.getName(scanner.next()); //이름을 전달합니다. 
			
			System.out.print("학생 "+iStudentCnt+"의 학번을 입력하시오. : ");
			student1.getID(scanner.nextInt()); //학번을 전달합니다.
			
			System.out.print("학생 "+iStudentCnt+"의 을 입력하시오. : ");
			student1.getScore(scanner.nextDouble()); //학점을 전달합니다.
			
		}
		
		
		scanner.close();
	}

}
